            //     headers: { 'Content-Type': 'application/json' },
            //     body: JSON.stringify({ email, password })
            // })
            // .then(response => response.json())
            // .then(data => {
            //     if (data.success) {
            //         window.location.href = '/admin/dashboard';
            //     } else {
            //         alert('Invalid credentials');
            //     }
            // });
        });
    </script>

