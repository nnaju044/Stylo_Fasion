<body class="bg-gray-50">
    <div class="flex min-h-screen">
        <%- include('../partials/admin/sidebar') %>
            <!-- Main Content -->
            <main class="flex-1">
                <!-- Header -->
                <div class="bg-white border-b border-gray-200 px-8 py-6">
                    <h2 class="text-3xl font-bold text-gray-900 mb-1">Users</h2>
                    <p class="text-gray-500">Manage your users and their permissions</p>
                </div>

                <!-- Content Area -->
                <div class="p-8">
                    <!-- Search Bar -->

                    <%- include('../partials/admin/searchBar', { inputId: 'userSearchInput' , clearBtnId: 'clearSearchBtn' ,
                        placeholder: 'Search users...' , onInputFn: 'handleUserSearch' , onClearFn: 'clearUserSearch' })
                        %>

                        <!-- Users Table -->
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden ">
                            <table class="w-full">
                                <thead class="bg-gray-50 border-b border-gray-200">
                                    <tr>
                                        <th
                                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            User</th>

                                        <th
                                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Status</th>
                                        <th
                                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Join Date</th>
                                        <th
                                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="usersTableBody" class="divide-y divide-gray-200">
                                    <% if (users.length> 0) { %>
                                        <% users.forEach(function(user) { %>
                                            <tr class="hover:bg-gray-50 transition-colors">
                                                <td class="px-6 py-4">
                                                    <div class="flex items-center">
                                                        <!-- Empty space for profile picture with fixed size -->
                                                        <div
                                                            class="w-10 h-10 rounded-full bg-gray-200 mr-3 flex-shrink-0 flex items-center justify-center">
                                                            <% if (user.profileImage || user.googleImage) { %>
                                                                <img src="<%= user.profileImage || user.googleImage %>"
                                                                    alt="<%= user.name %>"
                                                                    class="w-10 h-10 rounded-full object-cover">
                                                                <% } else { %>
                                                                    <i class="fas fa-user text-gray-400"></i>

                                                                    <% } %>
                                                        </div>
                                                        <div>
                                                            <div class="font-medium text-gray-900">
                                                                <%= user.firstName %>
                                                            </div>
                                                            <div class="text-sm text-gray-500">
                                                                <%= user.email %>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </td>

                                                <td class="px-6 py-4">
                                                    <% if (user.isActive===true) { %>
                                                        <span
                                                            class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                                            active
                                                        </span>
                                                        <% } else if (user.isActive===false) { %>
                                                            <span
                                                                class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                                                blocked
                                                            </span>
                                                            <% } %>
                                                </td>
                                                <td class="px-6 py-4">
                                                    <span class="text-gray-700">
                                                        <%= new Date(user.createdAt).toLocaleDateString('en-IN') %>
                                                    </span>
                                                </td>
                                                <td class="px-6 py-4">
                                                    <div class="flex items-center space-x-3">

                                                        <!-- Block / Unblock Button -->
                                                        <button
                                                            onclick="openUserModal('<%= user._id %>', <%= user.isActive %>)"
                                                            class="<%= user.isActive ? 'text-red-600' : 'text-green-600' %> hover:opacity-80">

                                                            <i
                                                                class="fas <%= user.isActive ? 'fa-ban' : 'fa-check-circle' %> text-lg"></i>

                                                        </button>


                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                        <div id="pagination" class="flex items-center justify-center mt-8 gap-2"></div>
                </div>
            </main>
    </div>
    <div id="userConfirmModal"
        style="position: fixed; inset: 0; background-color: rgba(0, 0, 0, 0.5); z-index: 9999; display: none; align-items: center; justify-content: center; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;">

        <div class="modal-overlay" style="width: 100%; display: flex; justify-content: center;">

            <div class="modal-container"
                style="background-color: #ffffff; border-radius: 12px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2); width: 100%; max-width: 480px; padding: 40px; text-align: left; position: relative;">

                <div class="user-picture-placeholder"
                    style="width: 80px; height: 80px; background-color: #e2e8f0; border-radius: 50%; margin: 0 auto 24px; display: flex; justify-content: center; align-items: center; color: #a0aec0; font-size: 40px;">
                    <i class="fas fa-user"></i>
                </div>

                <div class="modal-header" style="margin-bottom: 20px; text-align: center;">
                    <h1 id="modalTitle" class="modal-title"
                        style="font-size: 28px; font-weight: 600; color: #8B0000; margin: 0;">
                        Block User
                    </h1>
                </div>

                <div class="modal-body" style="margin-bottom: 32px; text-align: center;">
                    <p id="modalMessage" class="modal-text"
                        style="font-size: 16px; color: #4a5568; line-height: 1.6; margin: 0;">
                        Are you sure you want to block this user?
                    </p>
                </div>

                <div class="modal-footer" style="display: flex; justify-content: center; gap: 12px;">
                    <button class="btn btn-cancel" type="button" onclick="closeUserModal()"
                        style="padding: 12px 28px; font-size: 15px; font-weight: 500; border: none; border-radius: 6px; cursor: pointer; background-color: transparent; color: #4a5568;">
                        Cancel
                    </button>

                    <button id="confirmActionBtn" class="btn btn-block" type="button" onclick="confirmUserAction()"
                        style="padding: 12px 28px; font-size: 15px; font-weight: 500; border: none; border-radius: 6px; cursor: pointer; background-color: #8B0000; color: #ffffff; min-width: 90px;">
                        Block
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script src="/script/admin/usersManagment.js"></script>
</body>