<!-- Main Login Container -->
<div class="flex items-center justify-center px-4 py-8 md:py-16">
  <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12 w-full max-w-md">
    <!-- Brand Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-red-900 mb-2">Stylo Fasion</h1>
      <p class="text-gray-500 text-sm">Admin Portal</p>
    </div>

    <!-- Welcome Message -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-red-900 mb-2">Welcome back</h2>
      <p class="text-gray-600 text-sm">Sign in to your admin account</p>
    </div>

    <!-- Login Form -->
    <form action="/admin/login" method="POST" id="loginForm">
      <!-- Email Field -->
      <div class="mb-6">
        <label
          for="email"
          class="block text-gray-700 text-sm font-medium mb-2 flex items-center justify-between"
        >
          <span>Email Address</span>
          <i class="fas fa-check text-gray-400 hidden" id="emailCheck"></i>
        </label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="admin@stylo.com"
          class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-red-800 transition-colors duration-300"
          required
        />
      </div>

      <!-- Password Field -->
      <div class="mb-6">
        <label
          for="password"
          class="block text-gray-700 text-sm font-medium mb-2"
        >
          Password
        </label>
        <div class="relative">
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-red-800 transition-colors duration-300 pr-12"
            required
          />
          <button
            type="button"
            id="togglePassword"
            class="absolute right-4 top-1/2 transform -translate-y-1/2 text-red-800 hover:text-red-900 focus:outline-none"
          >
            <i class="far fa-eye" id="eyeIcon"></i>
          </button>
        </div>
      </div>

      <!-- Login Button -->
      <button
        type="submit"
        class="w-full bg-red-900 hover:bg-red-800 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-300 mb-4"
      >
        Login
      </button>
      <% if (error) { %>
      <div
        class="mb-4 rounded-lg bg-red-100 border border-red-400 px-4 py-3 text-red-700"
      >
        ⚠️ <%= error %>
      </div>
      <% } %>

      <!-- Protected Message -->
      <div class="text-center">
        <p class="text-xs text-gray-400">
          Protected by enterprise-grade security
        </p>
      </div>
    </form>
  </div>
</div>

<!-- Need Help Section -->
<div class="text-center pb-8">
  <p class="text-gray-600 text-sm">
    Need help?
    <a
      href="/contact-support"
      class="text-red-900 hover:text-red-800 font-medium ml-1"
      >Contact Support</a
    >
  </p>
</div>
