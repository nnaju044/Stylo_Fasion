<!-- Main Content -->
<body class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div
    class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200"
  >
    <div class="grid grid-cols-1 lg:grid-cols-2">
      <!-- Left Side - Image  -->
      <img
        src="/images/other/Conform-Code-window.webp"
        alt="product"
        class="w-full h-full object-cover"
      />

      <!-- Right Side - Confirmation Form -->
      <div class="p-12 lg:p-16 flex flex-col justify-between min-h-[700px]">
        <div
          class="flex-1 flex flex-col justify-center max-w-md mx-auto w-full"
        >
          <h1
            class="title-font text-5xl text-red-900 mb-16 text-center lg:text-left"
          >
            Stylo Fasion
          </h1>

          <div class="space-y-8">
            <h2
              class="text-2xl font-semibold text-red-900 text-center lg:text-left"
            >
              Enter The Confirmation Code
            </h2>

            <!-- Confirmation Code Form -->
            <form action="/user/verify-otp" method="POST" class="space-y-6">
              <div>
                <label
                  for="confirmationCode"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  Confirmation Code
                </label>
                <input
                  type="text"
                  id="confirmationCode"
                  name="otp"
                  required
                  class="w-full px-4 py-3 border-b-2 border-gray-300 focus:border-red-900 outline-none transition-all bg-transparent"
                  placeholder="Enter OTP"
                />
                <span id="otpTimer" class="text-sm text-gray-500"> 02:00 </span>
              </div>

              <button
                type="submit"
                class="w-full bg-red-900 text-white py-3 rounded-lg font-medium hover:bg-red-800 transition-colors shadow-md"
              >
                Submit
              </button>

              <div class="text-center">
                <p class="text-sm text-gray-600">
                  Didn't receive Confirmation Code?
                  <button
                    type="button"
                    id="resendOtpBtn"
                    class="text-blue-600 hover:text-blue-700 font-medium hover:underline ml-1 bg-none border-none cursor-pointer"
                  >
                    Resend Now
                  </button>
                </p>
              </div>
            </form>
          </div>
        </div>

        <!-- Footer -->
        <div class="text-right mt-8">
          <a href="/terms" class="text-sm text-red-900 hover:underline">
            Stylo Fasion Terms & Conditions
          </a>
        </div>
      </div>
    </div>
  </div>
  <script>
// 2 minutes
  let timeLeft = 120; 
  const timerEl = document.getElementById("otpTimer");
  const resendBtn = document.getElementById("resendOtpBtn");

  const startOtpTimer = () => {
    resendBtn.disabled = true;
    resendBtn.classList.add("opacity-50", "cursor-not-allowed");
    timerEl.classList.remove("hidden");
    timeLeft = 120;

    const interval = setInterval(() => {
      if (timeLeft <= 0) {
        clearInterval(interval);
        timerEl.classList.add("hidden");
        resendBtn.disabled = false;
        resendBtn.classList.remove("opacity-50", "cursor-not-allowed");
        return;
      }

      timeLeft--;
      const minutes = Math.floor(timeLeft / 60);
      const seconds = String(timeLeft % 60).padStart(2, "0");
      timerEl.textContent = `${minutes}:${seconds}`;
    }, 1000);
  };

  // Initialize timer on page load
  if (resendBtn) {
    startOtpTimer();

    resendBtn.addEventListener("click", async (e) => {
      e.preventDefault();
      
      try {
        const res = await fetch("/user/resend-otp", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            userId: "<%= userId %>",
            purpose: "<%= purpose %>" 
          })
        });

        const data = await res.json();

        if (!data.success) {
          if (typeof Swal !== 'undefined') {
            Swal.fire("Error", data.message, "error");
          } else {
            alert(data.message || "Failed to resend OTP");
          }
          return;
        }

        if (typeof Swal !== 'undefined') {
          Swal.fire("Success", "OTP resent successfully", "success");
        } else {
          alert("OTP resent successfully");
        }
        startOtpTimer();

      } catch (err) {
        if (typeof Swal !== 'undefined') {
          Swal.fire("Error", "Something went wrong", "error");
        } else {
          alert("Something went wrong");
        }
      }
    });
  }
</script>

</body>
