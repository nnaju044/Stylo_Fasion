<!-- Main Content -->
<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
    <div class="grid grid-cols-1 lg:grid-cols-2">
      <!-- Left Side - Image Placeholder -->
      <div
        class="relative bg-gradient-to-br from-teal-600 to-teal-800 flex items-center justify-center min-h-[600px]"
      >
        <img
          src="/images/other/Sign-in Page-theme.webp"
          alt="product"
          class="w-full h-full object-cover"
        />
      </div>

      <!-- Right Side - Sign In Form -->
      <div class="p-12 lg:p-16 flex flex-col justify-center">
        <div class="max-w-md mx-auto w-full">
          <h1 class="title-font text-5xl text-red-900 mb-8">Stylo Fasion</h1>

          <h2 class="text-2xl font-semibold text-gray-800 mb-8">Sign In</h2>

          <!-- Social Sign In Buttons -->
          <div class="grid grid-cols-2 gap-4 mb-6">
            <button
              class="flex items-center justify-center px-4 py-3 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
                <path
                  fill="#4285F4"
                  d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                />
                <path
                  fill="#34A853"
                  d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                />
                <path
                  fill="#FBBC05"
                  d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                />
                <path
                  fill="#EA4335"
                  d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                />
              </svg>
              <span class="text-sm font-medium text-gray-700"
                >Sign up with Google</span
              >
            </button>

            <button
              class="flex items-center justify-center px-4 py-3 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
                <path
                  fill="#EA4335"
                  d="M20.283 10.356h-8.327v3.451h4.792c-.446 2.193-2.313 3.453-4.792 3.453a5.27 5.27 0 0 1-5.279-5.28 5.27 5.27 0 0 1 5.279-5.279c1.259 0 2.397.447 3.29 1.178l2.6-2.599c-1.584-1.381-3.615-2.233-5.89-2.233a8.908 8.908 0 0 0-8.934 8.934 8.907 8.907 0 0 0 8.934 8.934c4.467 0 8.529-3.249 8.529-8.934 0-.528-.081-1.097-.202-1.625z"
                />
              </svg>
              <span class="text-sm font-medium text-gray-700"
                >Sign up with Email</span
              >
            </button>
          </div>

          <!-- Divider -->
          <div class="relative mb-6">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span
                class="px-4 bg-white text-gray-500 font-medium flex items-center"
              >
                <span class="w-8 h-px bg-red-900 mr-2"></span>
                OR
                <span class="w-8 h-px bg-red-900 ml-2"></span>
              </span>
            </div>
          </div>

          <!-- Sign In Form -->
          <form action="/signin" method="POST" class="space-y-6">
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-2"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-900 focus:border-transparent outline-none transition-all"
                placeholder="Enter your email"
              />
            </div>

            <div>
              <label
                for="password"
                class="block text-sm font-medium text-gray-700 mb-2"
                >Password</label
              >
              <input
                type="password"
                id="password"
                name="password"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-900 focus:border-transparent outline-none transition-all"
                placeholder="Enter your password"
              />
            </div>

            <button
              type="submit"
              class="w-full bg-red-900 text-white py-3 rounded-lg font-medium hover:bg-red-800 transition-colors"
            >
              Sign In
            </button>

            <a
              href="/user/signup"
              class="w-full border border-gray-300 text-gray-700 py-3 rounded-lg font-medium hover:bg-gray-50 transition-colors text-center block"
            >
              Register Now
            </a>

            <div class="text-right">
              <a
                href="/forgot-password"
                class="text-sm text-red-900 hover:underline"
              >
                Forget Password?
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <div class="text-right mt-6">
    <a href="/terms" class="text-sm text-gray-600 hover:text-gray-800">
      StyloFasion Terms & Conditions
    </a>
  </div>
</main>
