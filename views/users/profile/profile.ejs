<body class="bg-gray-50 min-h-screen">
  <div class="flex min-h-screen">
   
    <div class="flex gap-6">

  <%- include('../../partials/user/profile-sidebar', {
    user,
    active: 'profile'
  }) %>

  <div class="flex-1 bg-white rounded-xl p-6">
    <!-- Personal Information Content -->
  </div>

</div>


    <!-- Main Content Area -->
    <main class="flex-1 p-8 lg:p-12">
      <!-- Personal Information Section -->
      <div class="bg-white rounded-2xl shadow-sm p-8 mb-6">
        <div class="flex items-center justify-between mb-8">
          <h1 class="text-2xl font-bold text-red-900">Personal Information</h1>
          <a
            class="flex items-center text-red-900 hover:text-red-800 font-medium"
          >
            <i class="fas fa-edit mr-2"></i>
            Edit
        </a>
        </div>

        <!-- Information Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-6">
          <!-- Full Name -->
          <div>
            <label class="block text-sm font-medium text-red-900 mb-2"
              >Full Name</label
            >
            <p class="text-gray-900 font-medium"><%= user.firstName %> <%= user.lastName %></p>
          </div>

          <!-- Email Address -->
          <div>
            <label class="block text-sm font-medium text-red-900 mb-2"
              >Email Address</label
            >
            <p class="text-gray-900 font-medium"><%=user.email%></p>
          </div>

          <!-- Phone Number -->
          <div>
            <label class="block text-sm font-medium text-red-900 mb-2"
              >Phone Number</label
            >
            <p class="text-gray-900 font-medium"><%=user.phone%></p>
          </div>

          <!-- Member Since -->
          <div>
            <label class="block text-sm font-medium text-red-900 mb-2"
              >Member Since</label
            >
            <p class="text-gray-900 font-medium"><%= user.createdAt.toDateString() %></p>
          </div>
        </div>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Wallet Balance Card -->
        <div class="bg-white rounded-2xl shadow-sm p-8">
          <div class="flex items-start justify-between mb-6">
            <div class="flex items-center">
              <div
                class="w-12 h-12 bg-red-50 rounded-lg flex items-center justify-center mr-4"
              >
                <i class="fas fa-wallet text-xl text-red-900"></i>
              </div>
              <h3 class="text-lg font-semibold text-red-900">Wallet Balance</h3>
            </div>
            <a
              href="/user/wallet"
              class="flex items-center text-sm text-red-900 hover:text-red-800 font-medium"
            >
              See details
              <i class="fas fa-arrow-right ml-2"></i>
            </a>
          </div>
          <p class="text-4xl font-bold text-gray-900">â‚¹ <%=user.walletBalance%></p>
        </div>

        <!-- Total Referrals Card -->
        <div class="bg-white rounded-2xl shadow-sm p-8">
          <div class="flex items-start justify-between mb-6">
            <div class="flex items-center">
              <div
                class="w-12 h-12 bg-red-50 rounded-lg flex items-center justify-center mr-4"
              >
                <i class="fas fa-users text-xl text-red-900"></i>
              </div>
              <h3 class="text-lg font-semibold text-red-900">
                Total Referrals
              </h3>
            </div>
            <a
              href="/referrals"
              class="flex items-center text-sm text-red-900 hover:text-red-800 font-medium"
            >
              See details
              <i class="fas fa-arrow-right ml-2"></i>
            </a>
          </div>
          <p class="text-4xl font-bold text-gray-900"><%=totalReferrals%></p>
        </div>
      </div>
    </main>
  </div>
</body>
