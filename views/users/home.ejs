    <script>
        // Simple carousel functionality
        let currentSlide = 0;
        const totalSlides = 3;

        document.querySelector('.fa-chevron-right').parentElement.addEventListener('click', () => {
            currentSlide = (currentSlide + 1) % totalSlides;
            updateCarousel();
        });

        document.querySelector('.fa-chevron-left').parentElement.addEventListener('click', () => {
            currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
            updateCarousel();
        });

        function updateCarousel() {
            const indicators = document.querySelectorAll('.absolute.bottom-4 span');
            indicators.forEach((indicator, index) => {
                if (index === currentSlide) {
                    indicator.classList.remove('bg-opacity-50');
                } else {
                    indicator.classList.add('bg-opacity-50');
                }
            });
        }

        // Auto-play carousel
        setInterval(() => {
            currentSlide = (currentSlide + 1) % totalSlides;
            updateCarousel();
        }, 5000);
    </script>
