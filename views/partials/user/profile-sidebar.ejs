 <!-- Left Sidebar -->
    <aside class="w-80 bg-white p-8 flex flex-col items-center shadow-sm">
      <!-- Profile Picture -->
      <div class="relative mb-6 flex justify-center">
        <div
          class="w-32 aspect-square rounded-full border-2 border-red-900 flex items-center justify-center bg-gray-50 overflow-hidden"
        >
          <img id="profilePreview"
     src="<%= user.profileImage || '/images/default-user.png' %>">

        </div>
      </div>

      <!-- User Name and Email -->
      <div class="text-center mb-10">
        <h2 class="text-2xl font-bold text-gray-900 mb-1"><%= user.firstName %> <%= user.lastName %></h2>
        <p class="text-sm text-gray-500"><%=user.email%></p>
      </div>

      <!-- Navigation Menu -->
      <ul class="w-full space-y-2">

  <!-- Personal Information -->
  <li>
    <a
      href="/user/profile"
      class="flex items-center px-4 py-3 rounded-lg transition-colors
      <%= active === 'profile'
        ? 'text-red-900 bg-red-50 font-medium'
        : 'text-gray-700 hover:bg-gray-50' %>">
      <i class="fas fa-user w-5 mr-3 text-red-900"></i>
      <span>Personal Information</span>
    </a>
  </li>

  <!-- Addresses -->
  <li>
    <a
      href="/user/addresses"
      class="flex items-center px-4 py-3 rounded-lg transition-colors
      <%= active === 'addresses'
        ? 'text-red-900 bg-red-50 font-medium'
        : 'text-gray-700 hover:bg-gray-50' %>">
      <i class="fas fa-map-marker-alt w-5 mr-3 text-red-900"></i>
      <span>Addresses</span>
    </a>
  </li>

  <!-- Order History -->
  <li>
    <a
      href="/user/orders"
      class="flex items-center px-4 py-3 rounded-lg transition-colors
      <%= active === 'orders'
        ? 'text-red-900 bg-red-50 font-medium'
        : 'text-gray-700 hover:bg-gray-50' %>">
      <i class="fas fa-box w-5 mr-3 text-red-900"></i>
      <span>Order History</span>
    </a>
  </li>

  <!-- Logout -->
  <li>
    <a
      href="/user/logout"
      class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
      <i class="fas fa-sign-out-alt w-5 mr-3 text-red-900"></i>
      <span>Logout</span>
    </a>
  </li>

</ul>

    </aside>